run
UserGlobals associations do: [:assoc |
  assoc value isBehavior
    ifTrue: [
      (assoc key asString _findString: 'BaselineOf' startingAt: 1 ignoreCase: false) == 1
         ifTrue: [
           GsFile gciLogServer: '  removing the baseline ', assoc key asString printString.
           assoc value removeFromSystem ] ] ].
true
%

run
GsDeployer
  deploy: [
  {
    {'Metacello'. 'filetree:///opt/git/metacello-work/repository'. 'default'. #()}.
    {'GLASS1'. 'filetree:///opt/git/glass/repository'. 'default'. #()}.
  } do: [:ar |
    | project repository loads skipInit |
    project := ar at: 1.
    repository := ar at: 2.
    loads := ar at: 3.
    skipInit := ar at: 4.
    [
    Metacello new
      baseline: project;
      repository: repository;
      get.
    [
    Metacello new
      baseline: project;
      repository: repository;
      onConflict: [ :ex | ex allow ];
      load: loads 
         ] on: MCPerformPostloadNotification do: [:ex |
           (skipInit includes: ex postloadClass theNonMetaClass name)
             ifTrue: [ 
               "perform initialization"
               ex resume: true ]
             ifFalse: [
               GsFile gciLogServer: '  Skip ', ex postloadClass name asString, ' initialization.'.
                ex resume: false ] ] 
     ]  on: Warning do: [:ex |
           Transcript
              cr;
              show: ex description.
            ex resume ].
  ] ].
true
%

